.ui.popup.assistants

  %h4
    = t('.selected_assistants')+":"
  %ol.center
    - @activity.assistants.each do |assistant|
      %li.padding-right-30
        = assistant.name

  = simple_form_for @activity do |f|
    = f.association :assistants, collection: users_collection_without_author(@activity.user), as: :select, input_html: {class:'ui fluid dropdown'}, label: t('.add_assistants')

    .actions
      = f.button :submit, t('.save_changes'), class: 'ui button margin-top-10'
