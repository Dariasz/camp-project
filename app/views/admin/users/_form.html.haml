.segment
  = simple_form_for [:admin, @user] do |f|
    .field
      = f.input :role, as: :select, collection: User::ROLES, input_html: {class:'ui fluid dropdown'}, required: true
    .field
      = f.input :email, required: true, autofocus: true
    - unless action_name == "edit"
      .field
        = f.input :password, required: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
    .field
      = f.input :first_name, required: true
    .field
      = f.input :last_name, required: true
    .field
      = f.input :avatar, multiple: false
    .field
      = f.input :nationality, as: :select, collection: User.nationalities.keys, input_html: {class:'ui fluid dropdown'}, required: true

    -#.field
    -#  = f.input :age, required: true

    .actions
      = f.button :submit, t('submit'), class: 'ui button'
